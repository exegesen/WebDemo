@model WebDemo.ViewModels.CreatePersonViewModel
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.Title</title>
</head>
<body>

<table>
  <tr>
    <th>@Model.Col0</th>
    <th>@Model.Col1</th>
    <th>@Model.Col2</th>
    
  </tr>
  @foreach (var x in Model.personList)
  {
      <tr>
        <td>@x.Name</td>
         <td>@x.City</td>
        <td>
                    @using (Html.BeginForm("People", "PeopleList", FormMethod.Post))
                    {

                        <td colspan:"1"><input type="submit" value="Remove"></td>

                    }
                    
            
        </td>
      </tr>
  }
</table>

</body>
</html>